{
  "name": "our-journey",
  "description": "Our Journey interactive. | Â© 2018 The Open University (IET-OU).",
  "version": "1.3.4",
  "license": "GPL-3.0+",
  "main": "index.js",
  "browser": "dist/our-journey.js",
  "author": {
    "name": "Tim Coughlan"
  },
  "contributors": [
    {
      "name": "Glen Darby {graphic designer}"
    },
    {
      "name": "Nick Freear"
    },
    {
      "name": "The LTI-LTT developers (IET-OU)",
      "email": "iet-ltt-support@open.ac.uk",
      "url": "https://iet.open.ac.uk"
    }
  ],
  "homepage": "https://iet-ou.github.io/our-journey/",
  "repository": "https://github.com/IET-OU/our-journey.git",
  "bugs": "https://github.com/IET-OU/our-journey/issues",
  "keywords": [
    "accessibility",
    "education",
    "learning-journey",
    "student-experience"
  ],
  "engines": {
    "node": ">= 6"
  },
  "dependencies": {
    "lint": "^1.1.2"
  },
  "devDependencies": {
    "bannerize": "^1.1.3",
    "browserify": "^16.2.2",
    "browserify-versionify": "^1.0.6",
    "husky": "^1.0.0-rc.14",
    "live-server": "^1.2.0",
    "pa11y-ci": "^1.3.1",
    "pa11y-config": "git+https://github.com/nfreear/pa11y-config.git",
    "semistandard": "^12.0.1",
    "stringify": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm test"
    }
  },
  "semistandard": {
    "ignore": [
      "dist/",
      "dropbox/"
    ]
  },
  "pa11yCiConfig": {
    "defaults": {
      "standard": "WCAG2AA",
      "timeout": 5000
    },
    "urls": [
      "http://127.0.0.1:9000/index.html?demo=1&_ua=pa11y-ci"
    ]
  },
  "files": [
    "index.html",
    "assets/",
    "dist/",
    "src/",
    "style/*.css"
  ],
  "browserify": {
    "transform": [
      [
        "browserify-versionify",
        {
          "placeholder": "__VERSION__"
        }
      ],
      [
        "stringify",
        {
          "extensions": [
            ".html",
            ".svg"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "add-hook": "# cp _git-hook/pre-commit.sh .git/hooks/pre-commit # Deprecated!",
    "build": "browserify --no-bf -r ./index.js:our-journey > dist/our-journey.js && bannerize dist/* -b src/banner.ejs",
    "x-pa11yci-2x-preinstall": "export PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=1 # A hack!",
    "start": "live-server --port=9000",
    "fix": "semistandard --fix",
    "pa11y-ci": "pa11y-config --pkg && pa11y-ci",
    "test": "semistandard"
  }
}
